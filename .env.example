# ============================================================================
# .env.example
# ============================================================================
# Application Settings
APP_NAME=Crypto Trading Agent
APP_VERSION=1.0.0
DEBUG=false
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Configuration
DB_URL=postgresql+asyncpg://postgres:password@localhost:5432/crypto_trading
DB_REDIS_URL=redis://localhost:6379/0
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# API Keys
API_DEXSCREENER_RATE_LIMIT=300
API_MORALIS_API_KEY=your-moralis-api-key
API_COINGECKO_API_KEY=your-coingecko-api-key
API_GRAPH_API_KEY=your-graph-api-key

# Trading Configuration
TRADING_MAX_POSITION_SIZE=0.1
TRADING_MAX_DAILY_LOSS=0.05
TRADING_MAX_DRAWDOWN=0.15
TRADING_DEFAULT_SLIPPAGE=0.01
TRADING_UNISWAP_ROUTER=0xE592427A0AEce92De3Edee1F18E0157C05861564

# ML Configuration
ML_MODEL_STORAGE_PATH=/data/models
ML_OPENAI_API_KEY=your-openai-api-key
ML_ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring Configuration
MONITORING_PROMETHEUS_PORT=8000
MONITORING_LOG_LEVEL=INFO
MONITORING_TELEGRAM_BOT_TOKEN=your-telegram-bot-token
MONITORING_TELEGRAM_CHAT_ID=your-telegram-chat-id